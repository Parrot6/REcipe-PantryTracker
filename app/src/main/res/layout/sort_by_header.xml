<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/sortby_beer"
            android:layout_width="59dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sortby_desert"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_iconmonstr_beer_3" />

        <ImageButton
            android:id="@+id/sortby_desert"
            android:layout_width="52dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sortby_beverage"
            app:layout_constraintStart_toEndOf="@+id/sortby_beer"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_iconmonstr_candy_13" />

        <ImageButton
            android:id="@+id/sortby_beverage"
            android:layout_width="68dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sortby_entree"
            app:layout_constraintStart_toEndOf="@+id/sortby_desert"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_iconmonstr_drink" />

        <ImageButton
            android:id="@+id/sortby_entree"
            android:layout_width="52dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sortby_side"
            app:layout_constraintStart_toEndOf="@+id/sortby_beverage"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_iconmonstr_entree" />

        <ImageButton
            android:id="@+id/sortby_side"
            android:layout_width="43dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sortby_entree"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_iconmonstr_side" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sortby_beer"
            app:layout_constraintStart_toStartOf="@+id/sortby_beer"
            app:layout_constraintTop_toTopOf="@+id/sortby_beer" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entree"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="@+id/sortby_entree"
            app:layout_constraintEnd_toEndOf="@+id/sortby_entree"
            app:layout_constraintStart_toStartOf="@+id/sortby_entree"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beverage"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="@+id/sortby_beverage"
            app:layout_constraintEnd_toEndOf="@+id/sortby_beverage"
            app:layout_constraintStart_toStartOf="@+id/sortby_beverage"
            app:layout_constraintTop_toTopOf="@+id/sortby_beverage" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desert"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="@+id/sortby_desert"
            app:layout_constraintEnd_toEndOf="@+id/sortby_desert"
            app:layout_constraintStart_toStartOf="@+id/sortby_desert"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side"
            android:textColor="#F44336"
            app:layout_constraintBottom_toBottomOf="@+id/sortby_side"
            app:layout_constraintEnd_toEndOf="@+id/sortby_side"
            app:layout_constraintStart_toStartOf="@+id/sortby_side"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>